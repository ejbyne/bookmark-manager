<section>
  <h1>Please enter new password</h1>
  <form action="/users/change_password" method="post">
    <p><input name="password" type="password" placeholder="Password"></p>
    <p><input name="password_confirmation" type="password" placeholder = "Confirm Password"></p>
    <input name="token" value=<%= @token %> type="hidden">
    <input type="submit" value="Change Password" class="large button">
  </form>
</section>